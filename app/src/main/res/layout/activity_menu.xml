<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.usuario.meuteste.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha o tipo de ajuda"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:textColor="#382a2a"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Português"
                android:id="@+id/btPortugues"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#394dd1"
                android:allowUndo="true"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT    "
                android:id="@+id/textView5"
                android:textColor="#382a2a"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignTop="@id/btPortugues"
                android:layout_toLeftOf="@id/btPortugues" />

            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Português Simples"
                android:id="@+id/btPortuguesSimples"
                android:layout_below="@+id/btPortugues"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#394dd1"
                android:allowUndo="true"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT Fácil"
                android:id="@+id/textView6"
                android:textColor="#382a2a"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignTop="@id/btPortuguesSimples"
                android:layout_below="@+id/btPortugues"
                android:layout_toLeftOf="@id/btPortuguesSimples"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Libras"
                android:id="@+id/btLibras"
                android:layout_below="@+id/btPortuguesSimples"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#394dd1"
                android:allowUndo="true"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageLibras"
                android:layout_below="@+id/btPortuguesSimples"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/btLibras"
                android:src="@drawable/ic_libras"
             />

            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Internet"
                android:id="@+id/btInternet"
                android:layout_below="@+id/btLibras"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#394dd1"
                android:allowUndo="true"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageInternet"
                android:layout_below="@+id/btLibras"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/btInternet"
                android:src="@drawable/internet"
                />

            <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:id="@+id/btVoltar"
                android:layout_below="@+id/btInternet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#b3b4b6"
                android:allowUndo="true"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:onClick="voltar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageVoltar"
                android:layout_below="@+id/btInternet"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/btVoltar"
                android:src="@drawable/voltar"
                />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
